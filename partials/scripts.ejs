<!-- Other functions -->
<script>
    var innerState = false;
    $(document).ready(function () {
        $('#servicios_element1').addClass('animated fadeInLeftBig');
        $('#servicios_element2').addClass('animated fadeInUpBig');
        $('#servicios_element3').addClass('animated fadeInRightBig');
    });

    $(function () {

        $(".slider-productos").bxSlider({
            slideWidth: 700,
            minSlides: 1,
            maxSlides: 1,
            moveSlides: 1,
            slideMargin: 20,
        });

        $(".slide").css("margin-left", "32px");
        $(".bx-viewport").css('border', 'none')
        $(".bx-viewport").css('box-shadow', 'none')
        $(".bx-viewport").css('-moz-box-shadow', 'none')
        $(".bx-viewport").css('-webkit-box-shadow', 'none')

        var loading_screen = pleaseWait({
            logo: "images/08bits.png",
            backgroundColor: '#fff',
            loadingHtml: '<div class="sk-wandering-cubes"><div class="sk-cube sk-cube1"></div> <div class="sk-cube sk-cube2"></div> </div>'
        });

        setTimeout(function () {
            loading_screen.finish();
            $(".inner").show();
        }, 1000);

        $(".portfolio-link").on('click', function () {
            window.history.pushState('', null, './');
        });

        if (window.history && window.history.pushState) {
            $(window).on('popstate', function () {
                if ($(".modal.in").length <= 0) {
                    window.history.back();
                }
                else {
                    $(".modal.in").modal('toggle');
                }
            });
        }
    });

</script>